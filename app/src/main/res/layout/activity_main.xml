<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">


    <LinearLayout
        android:id="@+id/zona_elementos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="30dp"
            android:background="@android:color/holo_green_dark"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="PidePizza"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="50dp" />

        <FrameLayout
            android:id="@+id/zona_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!--
        <fragment
            android:name="com.example.apppizzas.view.ListFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zona_fragment_lista"/>
        <fragment
            android:name="com.example.apppizzas.view.CartFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zona_fragment_carro"/>
        <fragment
            android:name="com.example.apppizzas.view.SearchFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zona_fragment_search"/>
            -->
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/holo_green_dark"
        app:menu="@menu/navigation_menu">

    </com.google.android.material.bottomnavigation.BottomNavigationView>


</androidx.constraintlayout.widget.ConstraintLayout>